{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        "prettier/prettier": ["error", {"singleQuote": true, "parser": "flow", "endOfLine":"auto"}],
        "react/prop-types": 0
    }
}
